    <!-- ========================================================== General  -->

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Tasks" parent="AppThemeBase">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
